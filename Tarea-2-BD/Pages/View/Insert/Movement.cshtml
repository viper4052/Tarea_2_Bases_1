@page
@model Tarea_2_BD.Pages.View.Insert.MovementModel
@{
}


@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
	</div>
}



<h3>Empleado</h3>
<dl>
	<dt>Nombre:</dt>
	<dd>@Model.empleadoActual.Nombre</dd>

	<dt>Documento de Identidad:</dt>
	<dd>@Model.empleadoActual.ValorDocumentoIdentidad</dd>

	<dt>Saldo de Vacaciones:</dt>
	<dd>@Model.empleadoActual.SaldoVacaciones</dd>
</dl>






<form method="POST">

    <div class="col mb-3">
		<label class="col-sm-3 col-form-label">Monto</label>
		<div class="col-sm-3">
            <input type="text" class="form-control" name="Monto" value=" ">
        </div>
    </div>


	<div class="form-group">
		<label for="movimiento">Seleccione el movimiento:</label>
		
		<select id="movimiento" name="movimientoSeleccionado" class="form-control">
			<option value="">-- Seleccione --</option>
			@foreach (var item in @Model.listaTipoMovimientos)
			{
				<option value="@item.Nombre">@item.Nombre, @item.Accion</option>
			}
		</select>
	</div>
	</br>
	<button type="submit" class="btn btn-primary">Solicitar</button>


</form>


</br>
<div class="col-sm-3 d-grid">
	<a href="/View/List/Movimiento" class="btn btn-primary">Regresar</a>
</div>




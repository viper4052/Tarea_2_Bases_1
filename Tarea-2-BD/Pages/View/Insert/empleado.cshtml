@page
@model Tarea_2_BD.Pages.View.Insert.empleadoModel
@{
}


<h2>Nuevo Empleado</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}




<form method="POST">

    <div class="col mb-3">
        <label class="col-sm-3 col-form-label">Valor Documento de Identidad:</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="ValorDocId" value="">
        </div>
    </div>

    <div class="col mb-3">
        <label class="col-sm-3 col-form-label">Nombre:</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="Nombre" value="">
        </div>
    </div>


    <div class="form-group">
        <label for="puesto">Puesto:</label>

        <select id="puesto" name="PuestoSeleccionado" class="form-control">
            <option value="">-- Seleccione --</option>
            @foreach (var item in @Model.listaPuestos)
            {
                <option value="@item">@item</option>
            }
        </select>
    </div>

    </br>
    
    <button type="submit" class="btn btn-primary">Insertar</button>


</form>
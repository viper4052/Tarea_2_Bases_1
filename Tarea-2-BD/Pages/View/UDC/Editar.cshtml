@page
@model Tarea_2_BD.Pages.View.UDC.EditarModel
@{
}

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<h2>Edita empleado</h2>


<form method="post">
    <div class="row mb-3">
        <label>Nuevo nombre</label>
        <div class="col-sm-6">
            <input type="text" name="newNombre">
        </div>
    </div>


     <div class="row mb-3">
        <label>Nuevo Valor documento identidad</label>
        <div class="col-sm-6">
            <input type="text" name="NewValorDocumentoIdentidad">
        </div>
    </div>

    <div class="form-group">
        <label for="puesto">Puesto:</label>

        <select id="puesto" name="PuestoSeleccionado" class="form-control">
            <option value="">-- Seleccione --</option>
            @foreach (var item in @Model.listaPuestos)
            {
                <option value="@item">@item</option>
            }
        </select>
    </div>

    <br />
    <button class="btn btn-primary" type="submit">Editar</button>



</form>

</br>

<div class="col-sm-3 d-grid">
    <a href="/View/List/Employee" class="btn btn-primary">Regresar</a>
</div>